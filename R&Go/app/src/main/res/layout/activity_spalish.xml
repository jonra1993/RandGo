<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spalish"
    android:background="@drawable/grad_big">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        
        <ImageView
            android:id="@+id/img_corredores"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/portada_corredores"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <RelativeLayout
            android:id="@+id/relat1"
            android:layout_below="@+id/img_corredores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventana de Bienvenida R&amp;Go"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>

