<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".Spalish"
    android:background="@drawable/pprincipal">

    <RelativeLayout
        android:id="@+id/relat0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true">
        
        <ImageView
            android:id="@+id/img_corredores"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/audiorun_01"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:scaleType="fitCenter"/>

        <RelativeLayout
            android:id="@+id/relat1"
            android:layout_below="@+id/img_corredores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/img_audioRun"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/audiorun_01"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tvInicio"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="50dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorIniWhite"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relatline"
            android:layout_width="1000dp"
            android:layout_below="@+id/relat1"
            android:background="@drawable/ic_base"
            android:visibility="gone"
            android:layout_marginTop="-30dp"
            android:layout_height="70dp">

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

