<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OptionsActivity">

    <TextView
        android:id="@+id/tit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tit1"
        android:textSize="28dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/b_carolina"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/tit2"
        android:textSize="28dp"

        />
    <Button
        android:id="@+id/b_estadiox"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/tit3"
        android:textSize="28dp"
        />
    <Button
        android:id="@+id/b_estadioy"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/tit4"
        android:textSize="28dp"
        />

    <TextView
        android:id="@+id/tit5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tit5"
        android:textSize="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/b_cargar_gpx"
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/tit6"
        android:textSize="28dp"
        android:visibility="invisible"
        />
    <CheckBox android:id="@+id/checkbox_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Habilitar Audio GuÃ­a"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desarrollado por: Jonathan Vargas y Diego Navas "
        android:textSize="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        />


</LinearLayout>